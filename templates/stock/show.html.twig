{% extends 'base.html.twig' %}

{% block title %}Stock{% endblock %}

{% block body %}
    <h1>Stock</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ stock.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ stock.name }}</td>
            </tr>
            <tr>
                <th>Ticker</th>
                <td>{{ stock.ticker }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="btn btn-warning mb-3">edit</a>

    {{ include('stock/_delete_form.html.twig') }}

    <a href="{{ path('app_stock_index') }}" class="btn btn-back">back to list</a>
{% endblock %}
